<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Questions: 1/n"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:id="@+id/textQuestionNo"
        android:freezesText="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:layout_below="@id/textQuestionNo"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:id="@+id/textScore"
        android:freezesText="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textScore"
        android:text="Category: "
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:id="@+id/textCategory"
        android:freezesText="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textCategory"
        android:text="Difficulty: "
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:id="@+id/textDifficulty"
        android:freezesText="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:30"
        android:layout_alignParentEnd="true"
        android:textSize="37sp"
        android:textColor="@color/black"
        android:id="@+id/textTimer"
        android:freezesText="true"/>

    <TextView
        android:id="@+id/textQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question #1"
        android:layout_above="@id/radioGroup"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textAlignment="center"
        android:freezesText="true"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

      <RadioButton
          android:id="@+id/rb1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Option 1"
          android:textSize="20sp"
          android:freezesText="true"/>

      <RadioButton
          android:id="@+id/rb2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Option 2"
          android:textSize="20sp"
          android:freezesText="true"/>

      <RadioButton
          android:id="@+id/rb3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Option 3"
          android:textSize="20sp"
          android:freezesText="true"/>

      <RadioButton
          android:id="@+id/rb4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Option 4"
          android:textSize="20sp"
          android:freezesText="true"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroup"
        android:layout_marginTop="20dp"
        android:text="Next"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:freezesText="true"/>

    <TextView
        android:id="@+id/textWatermark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnNext"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="450dp"
        android:freezesText="true"
        android:text="Created by Samvel Danielyan"
        android:textColor="@color/black"
        android:textSize="17sp" />

  </RelativeLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>